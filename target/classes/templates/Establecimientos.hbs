{{> templates/base }}
{{#partial "tituloYcss"}}
        <link rel = "stylesheet" href = "/css/Establecimientos.css">
        <title>Establecimientos</title>
 {{/partial}}
 {{> templates/base }}

 {{#partial "contenido"}}
        <div id="base">
            <h1>ESTABLECIMIENTOS</h1>
                <div class="row row-cols-1 g-4">
                {{#each establecimientos}}
                    <div class="col">
                        <div class="tarjetaEstablecimiento d-flex justify-content-between align-items-center">
                            <div>
                                <h2>{{this.nombre}}</h2>
                                <h4>Tipo: {{this.tipo}}</h4>
                                <h4>Municipio: {{this.localizacion.nombre}}</h4>
                                <h4>Servicios: {{this.cantidadServicios}}</h4>
                            </div>
                            <button type="button" class="btn btn-lg boton" onclick="window.location.href='/organismosDeControl/{{organismo_id}}/entidadesPrestadoras/{{entidadPrestadora_id}}/entidades/{{entidad_id}}/establecimientos/{{this.id}}/servicios'">Servicios</button>
                        </div>
                    </div>
                {{/each}}
                </div>
        </div>
        {{#if usuarioBasico}}
            <script src="/js/EnviarUbicacion.js"></script>
        {{/if}}
{{/partial}}
{{> templates/base }}